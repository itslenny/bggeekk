<div id="signupDiv">
    <h1>Sign up!</h1>
    <form class="form" method="post" action="/auth/signup">
        <input type="text" class="form-control" placeholder="Enter your e-mail" name="email">
        <br><br>
        <input type="text" class="form-control" placeholder="Enter your name" name="name">
        <br><br>
        <input type="password" class="form-control" placeholder="Choose a password" name="password">
        <br><br>
        <input type="submit" value="sign up" class="btn btn-primary">
    </form>
</div>
